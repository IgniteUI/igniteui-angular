{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "es2020",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2020",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2019",
            "dom"
        ],
        "paths": {
            "igniteui-angular": [
                "projects/igniteui-angular/src/public_api.ts"
            ],
            "igniteui-angular-i18n": [
                "projects/igniteui-angular-i18n/src/index.ts"
            ]
        },
        "rootDir": "."
    },
    "exclude": [
        "dist",
        "projects/igniteui-angular/migrations/",
        "projects/igniteui-angular/schematics/",
        "projects/igniteui-angular/cypress/",
        "cypress/",
        "e2e/"
    ],
    "angularCompilerOptions": {
        "generateDeepReexports": true,
        "strictTemplates": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}
