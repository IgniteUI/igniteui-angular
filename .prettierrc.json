{
    "trailingComma": "es5",
    "singleQuote": true,
    "arrowParens": "always",
    "printWidth": 120,
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": ["projects/igniteui-angular/migrations/**/*.json"],
            "options": {
                "parser": "json-stringify"
            }
        }
    ]
}
