{
  "extends": "../../tsconfig.json",
  "angularCompilerOptions": {
    "extendedDiagnostics": {
      "checks": {
        "controlFlowPreventingContentProjection": "suppress"
      }
    }
  },
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": [
      "node",
      "hammerjs"
    ]
  },
  "exclude": [
    "migrations/**/*.spec.ts",
    "schematics/**/*.spec.ts",
    "cypress/**/*.spec.ts"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
