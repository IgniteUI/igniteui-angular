{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "downlevelIteration": true,
        "importHelpers": true,
        "module": "es2020",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2017",
            "dom"
        ],
        "paths": {
            "igniteui-angular": [
                "projects/igniteui-angular/src/public_api.ts"
            ],
            "igniteui-angular-i18n": [
                "projects/igniteui-angular-i18n/src/index.ts"
            ]
        },
        "rootDir": "."
    },
    "exclude": [
        "dist",
        "projects/igniteui-angular/migrations/",
        "projects/igniteui-angular/schematics/"
    ],
    "typedocOptions": {
        "out": "dist/igniteui-angular/docs/typescript",
        "exclude": "**/*.spec.ts",
        "theme":  "node_modules/ig-typedoc-theme/dist",
        "excludePrivate": true,
        "excludeProtected": true,
        "name": "Ignite UI for Angular",
        "readme": "none"
    },
    "angularCompilerOptions": {
        "generateDeepReexports": true,
        "strictTemplates": true
    }
}
