{
  "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "sourceMap": true,
      "declaration": false,
      "noImplicitAny": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "removeComments": true,
      "lib": [
          "es2015",
          "dom"
      ],
      "typeRoots": [
          "./node_modules/@types"
      ],
      "types": [
          "jasmine",
          "hammerjs",
          "karma",
          "node",
          "webpack",
          "webpack-env"
      ]
  },
  "include": [
      "src/**/*.ts"
  ],
  "exclude": [
      "src/**/*.spec.ts",
      "node_modules",
      "demos",
      "dist"
  ]
}
