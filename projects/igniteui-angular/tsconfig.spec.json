{
  "extends": "../../tsconfig.json",
  "angularCompilerOptions": {
    "extendedDiagnostics": {
      "checks": {
        "controlFlowPreventingContentProjection": "suppress"
      }
    }
  },
  "compilerOptions": {
    "outDir": "../../out-tsc/spec",
    "types": [
      "node",
      "hammerjs"
    ]
  },
  "files": [],
  "exclude": [
    "migrations",
    "schematics",
    "cypress",
    "node_modules"
  ],
  "include": [
    "**/*.spec.ts",
    "**/*.d.ts"
  ]
}
